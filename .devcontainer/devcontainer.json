{
  "name": "HotelManagementSystem",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "jdkDistro": "temurin",
      "installMaven": "true",
      "mavenVersion": "3.9.8"
    }
  },
  "customizations": {
    "vscode": { "extensions": ["vscjava.vscode-java-pack"] }
  },
  "postCreateCommand": "bash -lc 'cd HotelManagementSystem/complete && java -version && mvn -version || ./mvnw -version'"
}
